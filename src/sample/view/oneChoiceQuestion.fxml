<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.OneChoiceQuestion">

    <children>
        <Label fx:id="question" layoutX="172.0" layoutY="92.0" prefHeight="26.0" prefWidth="204.0" text="Label" />
        <GridPane layoutX="137.0" layoutY="159.0" prefHeight="116.0" prefWidth="326.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <RadioButton fx:id="answer0" mnemonicParsing="false" text="RadioButton" />
                <RadioButton fx:id="answer1" mnemonicParsing="false" text="RadioButton" GridPane.columnIndex="1" />
                <RadioButton fx:id="answer2" mnemonicParsing="false" text="RadioButton" GridPane.rowIndex="1" />
                <RadioButton fx:id="answer3" mnemonicParsing="false" text="RadioButton" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </children>
        </GridPane>
        <Button fx:id="nextQuestion" layoutX="300.0" layoutY="310.0" mnemonicParsing="false" onAction="#nextQuestion" text="Next question" />
      <Button fx:id="answer" layoutX="137.0" layoutY="310.0" mnemonicParsing="false" onAction="#answer" text="Answer" />
      <Label fx:id="alert" layoutX="246.0" layoutY="355.0" text="Label" />
    </children>

</AnchorPane>
